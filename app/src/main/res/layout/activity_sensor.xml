<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menus.SensorActivity">

<!-- top menu dan log -->
    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_4dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/log"
            android:padding="10dp"
            android:text="@string/sensor_real_time"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/log"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/ic_log"
            android:onClick="bukaLogActivity"
            android:contentDescription="Log"
            tools:ignore="HardcodedText" />
    </RelativeLayout>

<!-- Main Body -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
            tools:layout_editor_absoluteX="0dp">

            <!-- Bagian Kiri -->
            <LinearLayout
                android:id="@+id/linearLayout9"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- rtSuhuBat -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_2dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Text.Sensor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:text="Suhu Baterai" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/rtSuhuBat"
                            style="@style/Text.Sensor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30" />

                        <TextView
                            style="@style/Text.Sensor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="&#xb0;C" />
                    </LinearLayout>
                </LinearLayout>

                <!-- rtTekananUdara -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/bg_2dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Text.Sensor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:text="Tekanan Udara" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/rtTekananUdara"
                            style="@style/Text.Sensor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1010" />

                        <TextView
                            style="@style/Text.Sensor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" mBar" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Bagian Kanan -->
            <LinearLayout
                android:id="@+id/linearLayout8"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- rtSuhuUdara -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_2dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <TextView
                        style="@style/Text.Sensor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suhu Udara" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/rtSuhuUdara"
                            style="@style/Text.Sensor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30" />

                        <TextView
                            style="@style/Text.Sensor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="&#xb0;C" />
                    </LinearLayout>
                </LinearLayout>

                <!-- rtCpu -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/bg_2dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Text.Sensor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suhu CPU" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:gravity="center"
                        android:paddingBottom="5dp">

                        <TextView
                            android:id="@+id/rtCpu"
                            style="@style/Text.Sensor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30" />

                        <TextView
                            style="@style/Text.Sensor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="&#xb0;C" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- rtKelembabanUdara -->
            <LinearLayout
                android:id="@+id/linearLayout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/bg_2dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout9">

                <TextView
                    style="@style/Text.Sensor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="Kelembaban Udara"
                    android:textAlignment="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rtKelembabanUdara"
                        style="@style/Text.Sensor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="80" />

                    <TextView
                        style="@style/Text.Sensor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="%" />
                </LinearLayout>
            </LinearLayout>

            <!-- userID -->
            <LinearLayout
                android:id="@+id/linearLayout10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/bg_2dp"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout11"
                tools:layout_editor_absoluteX="5dp">

                <TextView
                    style="@style/Text.Sensor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="USER ID" />

                <TextView
                    android:id="@+id/userID"
                    style="@style/Text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Boma"
                    android:textSize="20sp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <!-- Menu Bottom Navigation -->
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            style="@style/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/bottom_navigation_menu" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>