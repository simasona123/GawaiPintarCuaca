<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menus.MainActivity">

    <!-- JudulApps -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_8dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/judulApps"
            style="@style/Text.title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gawai Pintar Cuaca"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:animateLayoutChanges="true"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout4">

            <!-- lokasi -->
            <TextView
                android:id="@+id/lokasi"
                style="@style/Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Lokasi"
                android:textAlignment="center"
                android:textSize="22sp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                tools:layout_editor_absoluteX="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">
                <!-- cuacaIcon -->
                <ImageView
                    android:id="@+id/cuacaIcon"
                    android:layout_width="163dp"
                    android:layout_height="163dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_cloudy"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lokasi"
                    tools:ignore="ContentDescription" />

                <!-- waktu -->
                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/cuacaIcon">

                    <TextView
                        android:id="@+id/waktu"
                        style="@style/parameterCuaca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Senin, 12 Januari 2021 06:00" />
                </RelativeLayout>

                <!-- suhu -->
                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

                    <TextView
                        android:id="@+id/suhu"
                        style="@style/parameterCuaca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="0dp"
                        android:text="30"
                        android:textSize="50sp"
                        app:layout_constraintTop_toBottomOf="@+id/cuacaIcon" />

                    <TextView
                        style="@style/parameterCuaca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:padding="0dp"
                        android:text="&#xb0;C"
                        android:textSize="50sp" />
                </LinearLayout>

                <!-- tekanan dan kelembaban -->
                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RH Udara "
                            style="@style/parameterCuaca"/>
                        <TextView
                            android:id="@+id/kelembaban"
                            style="@style/parameterCuaca"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="80" />

                        <TextView
                            style="@style/parameterCuaca"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" %" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Prakiraan kedepan -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
                    app:layout_constraintVertical_bias="0.0"
                    tools:layout_editor_absoluteX="0dp">

                    <!-- Card1 -->

                    <LinearLayout
                        android:id="@+id/linearLayout6"
                        style="@style/card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/waktu1"
                            style="@style/parameterCuaca"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11 Januari 12:00"
                            android:textAlignment="center" />

                        <ImageView
                            android:id="@+id/cuacaIcon1"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_cloudy" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/suhu1"
                                style="@style/parameterCuaca"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20" />

                            <TextView
                                style="@style/parameterCuaca"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="0dp"
                                android:padding="0dp"
                                android:text="&#xb0;C" />
                        </LinearLayout>
                        <!-- Card2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/parameterCuaca"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RH Udara " />

                            <TextView
                                android:id="@+id/kelembaban1"
                                style="@style/parameterCuaca"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="85" />

                            <TextView
                                style="@style/parameterCuaca"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" %" />

                        </LinearLayout>
                    </LinearLayout>

                    <!-- Card2 -->
                    <LinearLayout
                        android:id="@+id/linearLayout5"
                        style="@style/card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/waktu2"
                            style="@style/parameterCuaca"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11 Januari 12:00"
                            android:textAlignment="center" />

                        <ImageView
                            android:id="@+id/cuacaIcon2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_cloudy" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/suhu2"
                                style="@style/parameterCuaca"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20" />

                            <TextView
                                style="@style/parameterCuaca"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:padding="0dp"
                                android:text="&#xb0;C" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/parameterCuaca"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RH Udara " />

                            <TextView
                                android:id="@+id/kelembaban2"
                                style="@style/parameterCuaca"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="85" />

                            <TextView
                                style="@style/parameterCuaca"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" %" />

                        </LinearLayout>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <!-- Menu Bottom Navigation -->
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            style="@style/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/bottom_navigation_menu" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>